issn = {02506335},
journal = {Journal of Astrophysics and Astronomy},
keywords = {Methods: observational, radio imaging,Sun: solar wind, scintillations, angular broadenin},
month = {dec},
number = {4},
pages = {387--414},
publisher = {Springer India},
title = {{Radio synthesis imaging of anisotropic angular broadening in the solar wind}},
volume = {15},
year = {1994}
}
